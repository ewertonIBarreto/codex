<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
tools:context=".LoginActivity"
android:layout_width="match_parent"
android:layout_height="match_parent"
>



<TextView
android:layout_width="match_parent"
android:layout_height="50dp"
android:background="#198754"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent"
/>

<ImageView
android:id="@+id/logo"
android:layout_width="60dp"
android:layout_height="20dp"
android:layout_marginTop="15dp"
android:src="@drawable/codex_logo"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
/>

<TextView
android:id="@+id/txv_login"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Bem Vindo!"
android:textColor="@color/black"
android:textSize="34sp"
android:fontFamily="sans-serif-medium"
android:layout_marginTop="60dp"
app:layout_constraintEnd_toEndOf="@+id/logo"
app:layout_constraintStart_toStartOf="@+id/logo"
app:layout_constraintTop_toBottomOf="@id/logo"
/>

<TextView
android:id="@+id/txv_email"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginTop="50dp"
android:text="E-mail"
android:textSize="14sp"
android:textColor="@color/black"
app:layout_constraintStart_toStartOf="@id/edt_email"
app:layout_constraintTop_toBottomOf="@+id/txv_login"
/>

<EditText
android:id="@+id/edt_email"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginStart="56dp"
android:layout_marginEnd="56dp"
android:hint="Username ou e-mail"
android:textColor="#828282"
android:textSize="16sp"
android:inputType="text"
app:layout_constraintStart_toStartOf="@+id/txv_email"
app:layout_constraintTop_toBottomOf="@+id/txv_email" />

<TextView
android:id="@+id/txv_password"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginTop="40dp"
android:text="Senha"
android:textSize="14sp"
android:textColor="@color/black"
app:layout_constraintStart_toStartOf="@id/edt_password"
app:layout_constraintTop_toBottomOf="@+id/edt_email" />

<EditText
android:id="@+id/edt_password"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginStart="56dp"
android:layout_marginEnd="56dp"
android:hint="Digite sua senha"
android:textColor="#828282"
android:textSize="16sp"
android:inputType="textWebPassword"
app:layout_constraintLeft_toLeftOf="@+id/txv_password"
app:layout_constraintTop_toBottomOf="@+id/txv_password" />

<Button
android:id="@+id/buttonLogin"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginTop="40dp"
android:backgroundTint="#198754"
android:text="Login"
android:textStyle="bold"
app:layout_constraintEnd_toEndOf="@id/txv_login"
app:layout_constraintStart_toStartOf="@+id/txv_login"
app:layout_constraintTop_toBottomOf="@+id/edt_password"
/>

<TextView
android:id="@+id/forget_password"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Esqueci minha senha!"
android:textSize="14sp"
android:textColor="#828282"
android:layout_marginTop="10dp"
app:layout_constraintEnd_toEndOf="@id/txv_login"
app:layout_constraintStart_toStartOf="@+id/txv_login"
app:layout_constraintTop_toBottomOf="@+id/buttonLogin"
/>

